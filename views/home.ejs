<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
    <title>Home</title>
    <style>
      body {
          background: linear-gradient(135deg, #87CEEB, #ffffff);
          color: #333;
          transition: background 0.5s ease-in-out;
      }
      .card {
          background: linear-gradient(to bottom, #ffffff, #e0f7ff);
          color: #333;
          border: none;
          border-radius: 15px;
          transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out, background 0.3s ease-in-out;
          box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      }
      .card:hover {
          transform: scale(1.07);
          box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
          background: linear-gradient(to bottom, #e0f7ff, #cceeff);
      }
      .footer {
          background: #f0f8ff;
          color: #555;
          padding: 30px 0;
          transition: background 0.3s ease-in-out;
          border-top: 3px solid #87CEEB;
      }
      .footer a {
          color: #007BFF;
          text-decoration: none;
          transition: color 0.3s ease-in-out;
      }
      .footer a:hover {
          color: #0056b3;
      }
      .btn {
          border-radius: 10px;
          transition: background 0.3s ease-in-out, transform 0.2s;
      }
      .btn:hover {
          transform: scale(1.1);
          filter: brightness(1.2);
      }
      .carousel-item img {
          border-radius: 10px;
          box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
      }
  </style>
</head>
<body>
    <%- include('./partials/nav.ejs') %>
    
    <% if (locals.user) { %>
    <div class="container mt-3">
        <div class="row row-cols-1 row-cols-md-4 g-4">
            <% employees.forEach(employee => { %>
            <div class="col">
                <div class="card h-100">
                    <img src="<%= employee.coverImageURL %>" class="card-img-top" alt="Employee Image">
                    <div class="card-body text-center">
                        <h5 class="card-title"><%= employee.Name %></h5>
                        <a href="/employee/<%= employee._id %>" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
    <% } else { %>
    
    <div id="carouselExampleCaptions" class="carousel slide carousel-fade" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <% const carouselItems = [
                { img: '/images/image2.jpg', title: 'Growth Mindset', text: '“There is nothing noble in being superior to your fellow man; true nobility is being superior to your former self.”' },
                { img: '/images/image1.jpg', title: 'Clarity of Purpose', text: 'Most people know what they don\'t want, fewer know what they truly do want. So clarity is the key.' },
                { img: '/images/image3.jpg', title: 'Courage', text: '"It always seems impossible until it\'s done."' }
            ]; %>
            
            <% carouselItems.forEach((item, index) => { %>
            <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                <img src="<%= item.img %>" class="d-block w-100" alt="Slide Image">
                <div class="carousel-caption d-none d-md-block">
                    <h5><%= item.title %></h5>
                    <p><%= item.text %></p>
                    <button type="button" class="btn btn-danger">Positive Attitude</button>
                    <button type="button" class="btn btn-primary">Be a Team Player</button>
                    <button type="button" class="btn btn-success">Be Considerate</button>
                </div>
            </div>
            <% }) %>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    
    <div class="container py-5">
        <div class="row text-center">
            <h1 class="fw-light">About Our Site</h1>
            <p class="lead text-muted">Job portals are online platforms that connect job seekers with employers.</p>
        </div>
    </div>
    
    <footer class="py-5 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5>Subscribe to Our Application</h5>
                    <form class="d-flex">
                        <input type="text" class="form-control me-2" placeholder="Email address">
                        <button class="btn btn-primary">Subscribe</button>
                    </form>
                </div>
                <div class="col-md-6 text-md-end mt-3 mt-md-0">
                    <p class="text-muted">© 2024 Vaibhav Bhatt</p>
                </div>
            </div>
        </div>
    </footer>
    
    <% } %>
    
    <%- include('./partials/script.ejs') %>
</body>
</html>
