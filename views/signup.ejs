<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head.ejs') %>
  <title>Signup</title>
  <style>
    body {
      background: linear-gradient(135deg, #87CEEB, #ffffff);
            color: #333;
            transition: background 0.5s ease-in-out;
    }

    .signup-container {
      max-width: 400px;
      margin: 5rem auto;
      padding: 2rem;
      background: #fff;
      border-radius: 10px;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }

    .form-title {
      text-align: center;
      margin-bottom: 1.5rem;
      color: #333;
    }

    .form-control {
      padding: 10px;
      font-size: 16px;
    }

    .btn-submit {
      width: 100%;
      padding: 0.6rem;
      font-size: 16px;
      font-weight: 500;
      background-color: #4a6cf7;
      border: none;
      transition: all 0.3s ease;
    }

    .btn-submit:hover {
      background-color: #3152d9;
      transform: translateY(-2px);
    }

    .text-muted {
      font-size: 14px;
    }
  </style>
</head>
<body>
  <%- include('./partials/nav.ejs') %>

  <div class="container">
    <div class="signup-container">
      <h2 class="form-title">Create Account</h2>

      <form action="/user/signup" method="post">
        <div class="mb-3">
          <label for="fullName" class="form-label">Full Name</label>
          <input type="text" class="form-control" id="fullName" name="fullName" required>
        </div>

        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Email address</label>
          <input type="email" class="form-control" id="exampleInputEmail1" name="email" aria-describedby="emailHelp" required>
          <div id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</div>
        </div>

        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">Password</label>
          <input type="password" class="form-control" id="exampleInputPassword1" name="password" required>
        </div>

        <button type="submit" class="btn btn-primary btn-submit">Sign Up</button>
      </form>
    </div>
  </div>

  <%- include('./partials/script.ejs') %>
</body>
</html>
